{% extends 'base.html.twig' %}

{% block title %}Albums
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<h1 class="fw-bold mb-5">Albums</h1>
		<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
			{% for album in albums %}
				<div class="col">
					<div class="card h-100 shadow-sm">
						<img src="{{ album.urlImage }}" class="card-img-top" alt="{{ album.nomAlbum }}">

						<div class="card-body d-flex flex-column">
							<h5 class="card-title fw-bold flex-grow-1">{{ album.nomAlbum }}</h5>

							<div class="d-flex justify-content-between align-items-end">
								<div class="text-muted">{{ album.artiste.nomArtiste }}</div>

								<div class="d-flex justify-content-end">
									<a href="{{ path('app_album_show', {'id': album.id}) }}" class="btn btn-sm btn-outline-success me-2">Voir</a>
									<a href="{{ path('app_album_edit', {'id': album.id}) }}" class="btn btn-sm btn-outline-secondary">Modifier</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			{% else %}
				<div class="col">
					<div class="card h-100 shadow-sm">
						<div class="card-body d-flex flex-column justify-content-center align-items-center">
							<h5 class="card-title fw-bold text-muted">Aucun album trouvé</h5>
							<a href="{{ path('app_album_new') }}" class="btn btn-outline-success mt-3">Créer un nouvel album</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
