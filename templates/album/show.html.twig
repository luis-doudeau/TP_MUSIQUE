{% extends 'base.html.twig' %}

{% block body %}
	<div class="container">
		<div class="row mt-3">
			<div class="col-12">
				<h1>{{ album.name }}</h1>
				<p>by
					{% for artist in album.artists %}
						{{ artist.name }}
						{% if not loop.last %},
						{% endif %}
					{% endfor %}
				</p>
			</div>
		</div>
		<div class="row mt-3">
			{% if album.images is not empty %}
				<div class="col-md-4">
					<img src="{{ album.images[0].url }}" class="img-fluid rounded" alt="{{ album.name }}">
				</div>
			{% endif %}
			<div class="col-md-8">
				<div class="card border-0">
					<div class="card-body">
						<h2>Tracks</h2>
						{% for track in tracks %}
							<div class="row mb-3">
								<div class="col-12">
									{{ track.track_number }}.
									{{ track.name }}
								</div>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
